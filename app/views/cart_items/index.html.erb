

<h2>cart</h2>


<div>
	<div class="row" style="margin-left: 20px;">
			<div class="col-8">
				<% @cart_items.each do |cart_item| %>
				<div class="row">
					<div class="col-3" style="padding: 10px;">
						<p><%= image_tag cart_item.product.picture.image.variant(resize_to_limit: [150,150]) %></p>
						<div class="row">
							<div class="col-4">
								<%= link_to "-", decrement_cart_item_path(cart_item.id), :class => "button",data: { "turbo-method": :post }  %>
									
							</div>
							<div class="col-2">
								<p><%= cart_item.quantity %></p>
							</div>
							<div class="col-4">
								<%= link_to "+", increment_cart_item_path(cart_item.id), :class => "button",data: { "turbo-method": :post }  %>
							</div>
						</div>
					</div>
					<div class="col-7">
						<h5><%= cart_item.product.productName %></h5>
						<p>Rs.<%= cart_item.product.productPrice.to_s(:delimited) %></p>
						<p ><%= link_to "Remove from cart", cart_item_path(id:cart_item.id), :confirm => 'Are you sure?', :class => "button",data: { "turbo-method": :delete }  %></p>
					</div>
				</div>
				<b><hr></b>
				<% end %>
			</div>
		</div>
	</div>

<div style="margin-bottom: 20px;">
	<% if @cart_items !=[] %>
  <%= link_to "place Order", 'http://localhost:3000/order_items',  data: { "turbo-method": :post }  %>
  <% end %>
  
	
</div>
	

	



